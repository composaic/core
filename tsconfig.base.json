{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "declaration": true,
        "declarationDir": "./dist/types",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "./src",
        "jsx": "react-jsx",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}
